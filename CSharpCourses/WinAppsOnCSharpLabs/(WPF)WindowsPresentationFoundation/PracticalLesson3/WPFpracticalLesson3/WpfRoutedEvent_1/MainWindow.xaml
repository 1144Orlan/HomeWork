<Window TextBoxBase.TextChanged="Window_TextChanged"
    x:Class="WpfRoutedEvent_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged">
        <TextBox HorizontalAlignment="Left" Margin="70,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <RadioButton x:Name="radBut1" Content="&quot;Textbox&quot; event handling" HorizontalAlignment="Left" Margin="70,102,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBut2" Content="&quot;Grid&quot; event handling" HorizontalAlignment="Left" Margin="70,137,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBut3" Content="&quot;Window&quot; event handling" HorizontalAlignment="Left" Margin="70,172,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
