@page "{id:int}"
@model FitnessClubAutomation.Pages.Clients.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<h1>Reset Password</h1>

<h4>Client: @Model.Client.FullName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Client.Id" />
            
            <div class="form-group">
                <label class="control-label">Email</label>
                <input value="@Model.Client.Email" class="form-control" readonly />
            </div>
            
            <div class="form-group">
                <label class="control-label">New Password</label>
                <div class="input-group">
                    <input asp-for="NewPassword" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text">Auto-generated</span>
                    </div>
                </div>
                <small class="form-text text-muted">You can modify this password if needed</small>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Reset Password" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>