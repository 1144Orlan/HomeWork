@page
@model FitnessClubAutomation.Pages.Services.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="text-danger">
                @foreach (var modelState in ViewContext.ModelState)
                {
                    foreach (var error in modelState.Value.Errors)
                    {
                        <p>Error in @modelState.Key: @error.ErrorMessage</p>
                    }
                }
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Service.Name" class="control-label"></label>
                <input asp-for="Service.Name" class="form-control" />
                <span asp-validation-for="Service.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Service.Cost" class="control-label"></label>
                <input asp-for="Service.Cost" class="form-control" />
                <span asp-validation-for="Service.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Service.DurationMinutes" class="control-label"></label>
                <input asp-for="Service.DurationMinutes" class="form-control" />
                <span asp-validation-for="Service.DurationMinutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Service.Type" class="control-label"></label>
                <select asp-for="Service.Type" class="form-control" asp-items="Html.GetEnumSelectList<FitnessClubAutomation.Models.TrainingType>()"></select>
                <span asp-validation-for="Service.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.StaffId" class="control-label"></label>
                <select asp-for="Service.StaffId" class ="form-control" asp-items="ViewBag.StaffId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
