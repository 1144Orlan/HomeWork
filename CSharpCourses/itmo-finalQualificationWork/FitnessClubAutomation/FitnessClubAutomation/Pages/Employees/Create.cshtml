@page
@model FitnessClubAutomation.Pages.Employees.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Staff</h4>
<hr />

@if (TempData["ValidationFailed"] != null)
{
    <div class="alert alert-danger">
        <p>@TempData["ValidationFailed"]</p>
        @foreach (var key in TempData.Keys.Where(k => k.StartsWith("Error_")))
        {
            <p>@key: @TempData[key]</p>
        }
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        <p>@TempData["Error"]</p>
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Staff.FullName" class="control-label"></label>
                <input asp-for="Staff.FullName" class="form-control" />
                <span asp-validation-for="Staff.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Staff.Position" class="control-label"></label>
                <input asp-for="Staff.Position" class="form-control" readonly />
                <span asp-validation-for="Staff.Position" class="text-danger"></span>
                <small class="form-text text-muted">Position is set to "Coach" by default</small>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Staff.PhoneNumber" class="control-label"></label>
                <input asp-for="Staff.PhoneNumber" class="form-control" />
                <span asp-validation-for="Staff.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Staff.Email" class="control-label"></label>
                <input asp-for="Staff.Email" class="form-control" />
                <span asp-validation-for="Staff.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Account Password</label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text">Auto-generated</span>
                    </div>
                </div>
                <small class="form-text text-muted">This password will be used for the coach's login account</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}