@page
@model FitnessClubAutomation.Pages.Employees.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this staff member?</h3>

@if (Model.ServicesCount > 0 || Model.TrainingSessionsCount > 0 || Model.ClientRegistrationsCount > 0)
{
    <div class="alert alert-warning">
        <strong>Warning!</strong> Deleting this staff member will also delete:
        <ul>
            @if (Model.ServicesCount > 0)
            {
                <li>@Model.ServicesCount service(s)</li>
            }
            @if (Model.TrainingSessionsCount > 0)
            {
                <li>@Model.TrainingSessionsCount training session(s)</li>
            }
            @if (Model.ClientRegistrationsCount > 0)
            {
                <li>@Model.ClientRegistrationsCount client registration(s)</li>
            }
        </ul>
    </div>
}

<div>
    <h4>Staff</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.Position)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.Email)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Staff.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>