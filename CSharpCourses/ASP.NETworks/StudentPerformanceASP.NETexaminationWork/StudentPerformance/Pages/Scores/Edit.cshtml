@page
@model StudentPerformance.Pages.Scores.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Score</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Score.Id" />
            <div class="form-group">
                <label asp-for="Score.Subject" class="control-label"></label>
                <input asp-for="Score.Subject" class="form-control" />
                <span asp-validation-for="Score.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score.Points" class="control-label"></label>
                <input asp-for="Score.Points" class="form-control" />
                <span asp-validation-for="Score.Points" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score.StudentId" class="control-label"></label>
                <select asp-for="Score.StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="Score.StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
